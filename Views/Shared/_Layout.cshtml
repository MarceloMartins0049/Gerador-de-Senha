<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gerador de Senhas</title>

    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9252012816931663"
            crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- ANÚNCIO NO TOPO -->
    <div class="ads-container">
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-9252012816931663"
             data-ad-slot="1234567890"
             data-ad-format="auto"
             data-full-width-responsive="true"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>

    <header>
        <nav>
            <div class="container">
                <h1>Gerador de Senhas</h1>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ANÚNCIO NO RODAPÉ -->
    <div class="ads-container">
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-9252012816931663"
             data-ad-slot="0987654321"
             data-ad-format="auto"
             data-full-width-responsive="true"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>

    <footer class="text-center">
        <p>&copy; 2025 - Gerador de Senhas</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
